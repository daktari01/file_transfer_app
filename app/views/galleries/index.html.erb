<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Galleries</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th class="thead-light">Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @galleries.each do |gallery| %>
        <tr>
          <td><%= gallery.description %></td>
          <td><%= link_to 'Show', gallery, class: "btn btn-primary" %></td>
          <td><%= link_to 'Edit', edit_gallery_path(gallery), class: "btn btn-success" %></td>
          <td><%= link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Gallery', new_gallery_path, class: "btn btn-success" %>
</div>
